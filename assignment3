              <label class="label">To:</label>
                <select name="To" id="toCurrency" class="dropdown">
                    <option value="EUR">EUR</option>
                    <option value="USD">USD</option>
                    <option value="GBP">GBP</option>
                    <option value="AUD">AUD</option>
                    <option value="JPY">JPY</option>
                </select>
          <!-- Currency Form buttons -->
            <input type="button" value="Go" id="currencyButton" onclick="currencyConverter()">
            <input type="button" value="Clear" id="clearButton" onclick="clearField()">

          <!-- Display results -->
             <input type="text" id="result" placeholder="Result" maxLength="10" readonly>
