  <!-- JavaScript Functions -->
    <script>
    // Function to set the default style
      function setDefaultStyle() {
      // Get the theme links
        var defaultStylesheet = document.getElementById('default-stylesheet');
        var nightStylesheet = document.getElementById('night-stylesheet');
        var highContrastStylesheet = document.getElementById('high-contrast-stylesheet');

      // Enable the default style and disable the others
        defaultStylesheet.disabled = false;
        nightStylesheet.disabled = true;
        highContrastStylesheet.disabled = true;

      // Add 'active' class to the default theme link when window first opens
        document.getElementById('default-theme-link').classList.add('active');
      }

      // Call the setDefaultStyle function when window first opens
        window.onload = setDefaultStyle;

    // Switching between different themes function
      function switchStyle(styleName) {
      // Remove the 'active' class from other theme links
        document.querySelectorAll('.theme-link').forEach(link => link.classList.remove('active'));

      // Get the link elements
        var defaultStylesheet = document.getElementById('default-stylesheet');
        var nightStylesheet = document.getElementById('night-stylesheet');
        var highContrastStylesheet = document.getElementById('high-contrast-stylesheet');

      // Disable all stylesheets
        defaultStylesheet.disabled = true;
        nightStylesheet.disabled = true;
        highContrastStylesheet.disabled = true;

      // Enable the selected stylesheet theme once clicked on
        switch (styleName) {
        // Night theme selected
          case 'night':
            nightStylesheet.disabled = false;
            document.getElementById('night-theme-link').classList.add('active');
            alert("Switching to Night theme")
            break;
        // High Contrast selected
          case 'high_contrast':
            highContrastStylesheet.disabled = false;
            document.getElementById('high-contrast-theme-link').classList.add('active');
            alert("Switching to High Contrast theme")
            break;
        // Default style
          default:
            defaultStylesheet.disabled = false;
            alert("Switching to Default theme")
            document.getElementById('default-theme-link').classList.add('active');
        }
      }


    // Global variable for exchange rates (rounded up)
      var exchangeRates = {
        // US Dollar
          USD: {
              EUR: 0.85,
              GBP: 0.75,
              AUD: 1.52,
              JPY: 149.45
          },
        // Euro
          EUR: {
              USD: 1.18,
              GBP: 0.88,
              AUD: 1.66,
              JPY: 163.51
          },
        // British Pound
          GBP: {
              USD: 1.33,
              EUR: 1.14,
              AUD: 1.91,
              JPY: 188.37
          },
        // Australian Dollar
          AUD: {
              USD: 0.66,
              EUR: 0.60,
              GBP: 0.52,
              JPY: 98.41
          },
        // Japanese Yen
          JPY: {
              USD: 0.007,
              EUR: 0.006,
              GBP: 0.005,
              AUD: 0.01
          }
      };

   // Currency Converter function
      function currencyConverter() {
        var amount = document.getElementById("amountInput").value;
        var fromCurrency = document.getElementById("fromCurrency").value;
        var toCurrency = document.getElementById("toCurrency").value;

      // Get the chosen exchange rates
        var exchangeRate = exchangeRates[fromCurrency][toCurrency];

      // Result equation
        var result = amount * exchangeRate;

      // Display the Result in the result textfield
        document.getElementById("result").value = result + " " + toCurrency;
      }

    // Switch currencies function
      function switchCurrency() {
        var fromCurrency = document.getElementById("fromCurrency").value;
        var toCurrency = document.getElementById("toCurrency").value;

      // Swap From and To values
        document.getElementById("fromCurrency").value = toCurrency;
        document.getElementById("toCurrency").value = fromCurrency;

      // Recalculate the result with the currencyConverter function
        currencyConverter();
    }


    // Search Form function
      function searchQuestion(event) {
    /* REFERENCE
        MozDevNet (2023) Event: PreventDefault() method - web apis: MDN, MDN Web Docs.
        Available at: https://developer.mozilla.org/en-US/docs/Web/API/Event/preventDefault
    */
      // Prevent DuckDuckGo's default window from opening
        event.preventDefault();

        var question = document.getElementById("searchInput").value;
        var safeSearchOption = document.getElementById("searchOption").value;
        var colorOption = document.getElementById("colorTheme").value;
        var sizeOption = document.getElementById("fontSize").value;

      // Safe Search value
        var safeSearch = mapSafeSearch(safeSearchOption);

      // Font size value
        var size = mapSize(sizeOption);

      // Color Theme value
        var theme = mapTheme(colorOption);

    /* REFERENCE
        DuckDuckGo (2023) How to use URL parameters to change your duckduckgo search settings, DuckDuckGo Help Pages.
        Available at: https://duckduckgo.com/duckduckgo-help-pages/settings/params/
    */
      // DuckDuckGo URL with chosen parameter values
        var duckDuckGoUrl = 'https://duckduckgo.com/?q=' + question + '&kp=' + safeSearch + '&kae=' + theme + '&ks=' + size;

      // Open the search results in a new window
        window.open(duckDuckGoUrl, "_blank");
    }


  /* REFERENCE
    W3Schools (no date) The JavaScript Switch Statement, JavaScript Switch statement.
    Available at: https://www.w3schools.com/js/js_switch.asp
  */
    // Function to map Safe Search option to corresponding kp parameter value
      function mapSafeSearch(option) {
        switch (option) {
          case '1':
              return '1'; // On
          case '-1':
              return '-1'; // Moderate
          default:
              return '1'; // Default if no option is chosen
        }
      }

    // Function to map Color Theme option to corresponding kae parameter value
      function mapTheme(option) {
        switch (option) {
          case '-1':
            return '-1'; // Default
          case 'c':
            return 'c'; // Contrast
          case 'r':
            return 'r'; // Retro
          case 'd':
            return 'd'; // Dark
          case 't':
            return 't'; // Terminal
          default:
            return 'n'; // Default if no option is chosen
        }
      }

    // Function to map Size option to corresponding ks parameter value
      function mapSize(option) {
        switch (option) {
          case 'n':
            return 'n'; // Default
          case 'l':
            return 'l'; // Larger
          case 't':
            return 't'; // Largest
          case 'm':
            return 'm'; // Medium
          case 's':
            return 's'; // Small
          default:
            return 'n'; // Default if no option is chosen
        }
      }


   // Clear function to clear textfields after button is clicked
      function clearField() {
        // Clear Amount textfield
          document.getElementById("amountInput").value = "";
        // Clear Search textfield
          document.getElementById("searchInput").value = "";
        // Clear Result textfield
          document.getElementById("result").value = "";
      }


  /* REFERENCE
    Kannan3, V. (2023) How to force input field to enter numbers only using JavaScript ?, GeeksforGeeks.
    Available at: https://www.geeksforgeeks.org/how-to-force-input-field-to-enter-numbers-only-using-javascript/
  */
    // Only allow numbers to be entered into Amount input box
      function onlyNumberKey(evt) {
              var ASCIICode = (evt.which) ? evt.which : evt.keyCode
              if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
                  return false;
              return true;
          }


  /* REFERENCE
    Mr. Web Designer (2022) Maxlength attribute not working for input type = number in HTML? here's the Javascript solution!, YouTube. YouTube.
    Available at: https://www.youtube.com/watch?v=DDUdZNCuwtU
  */
    // Implement maxLength within Amount input box
        document.querySelectorAll('input[type=number]').forEach(input =>{
                input.oninput = () =>{
                    if(input.value.length > input.maxLength) input.value = input.value.slice(0, input.maxLength);
                };
            });
    </script>
