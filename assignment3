      <!-- Currency Converter Form: Look up currency exchange rate -->
        <form id="currencyExchangeRate">
          <h3><u>Currency Information</u></h3>
            <input type="number" name="Amount" id="amountInput" placeholder="Amount" onkeypress="return onlyNumberKey(event)" maxLength="10" required>
              <label class="label">From:</label>
                <select name="From" id="fromCurrency" class="dropdown">
                  <!-- Currency Options -->
                    <option value="USD">USD</option>
