      <!-- Search Form: Ask a question -->
        <form id="searchForm" action="https://duckduckgo.com/" method="GET" target="_blank" onsubmit="searchQuestion(event)">
          <h3><u>Search Form</u></h3>
            <input type="search" name="Question" id="searchInput" placeholder="Search" maxLength="65" required>
          <br><br>

        <!-- Safe Search option -->
          <label class="label">Safe Search:</label>
            <select name="kp" id="searchOption" class="dropdown">
              <option value="1">On</option>
